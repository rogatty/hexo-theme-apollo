mixin home()
    - var prev = page.prev_link
    - var next = page.next_link
    .paginator
        if page.prev
            a.prev(href=url_for(prev))!= __('prev') 
        if page.next
            a.next(href=url_for(next))!= __('next')

mixin post()
    - var prev = page.prev ? page.prev : false;
    - var next = page.next ? page.next : false;
    .paginator
        if prev
            a.prev(href=url_for(prev.path))!= __('newer_post') + ': ' + prev.title
        if next
            a.next(href=url_for(next.path))!= __('older_post') + ': ' + next.title